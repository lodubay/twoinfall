	journal = {The Astrophysical Journal Supplement Series},
	author = {Iwamoto, Koichi and Brachwitz, Franziska and Nomoto, Ken'ICHI and Kishimoto, Nobuhiro and Umeda, Hideyuki and Hix, W. Raphael and Thielemann, Friedrich-Karl},
