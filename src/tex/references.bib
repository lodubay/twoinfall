	journal = {Monthly Notices of the Royal Astronomical Society},
	author = {Johnson, James W. and Weinberg, David H.},
	month = oct,
	year = {2020},
	note = {ADS Bibcode: 2020MNRAS.498.1364J},
	keywords = {Astrophysics - Astrophysics of Galaxies, galaxies: abundances, galaxies: evolution, galaxies: star formation, galaxies: stellar content, methods: numerical},
	pages = {1364--1381},
}
