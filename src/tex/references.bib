	keywords = {ABUNDANCES, HYDRODYNAMICS, NUCLEAR REACTIONS, NUCLEOSYNTHESIS, STARS: EVOLUTION, STARS: INTERIORS, STARS: SUPERNOVAE: GENERAL},
