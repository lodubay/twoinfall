	author = {Johnson, James W. and Weinberg, David H. and Blanc, Guillermo A. and Bonaca, Ana and Rudie, Gwen C. and {Yuxi} and {Lu} and Reichardt Chu, Bronwyn and Griffith, Emily J. and Sit, Tawny and Johnson, Jennifer A. and Dubay, Liam O. and Weller, Miqaela K. and Boyea, Daniel A. and Bird, Jonathan C.},
	month = oct,
